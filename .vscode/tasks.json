{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["-G", "Ninja", ".."],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "windows": {
                "args": ["-G", "Visual Studio 15 2017 Win64", ".."]
            }
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", ".", "--config", "Debug"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", ".", "--config", "Debug", "--target", "clean"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
        },
        {
            "label": "Test (Debug)",
            "type": "shell",
            "command": "ctest",
            "args": ["-C", "Debug", "--verbose"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
